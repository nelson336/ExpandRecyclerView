<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llClickExpandable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UselessParent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/small_margin">

        <View
            android:id="@+id/lineTop"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/ivCheck"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:background="#000" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/ic_simple_check_green" />

        <View
            android:id="@+id/lineBottomExpandableItem"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivCheck"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:background="#000" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                tools:text="01/07" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivArrow"
                    android:textSize="@dimen/default_text_size"
                    tools:ignore="MissingPrefix"
                    tools:text="Recepcionados os documentosfs5654jlkfjsljflkdsjlkfjdkljflkjsdlkfjlksdjflkjsdklfjkldsjkfljsdlkfjkldsjfklsdjfkljsdkfjlsdjldjksdlkfjkldjlkfjsldsldjflkdsjlkdlkjflksj: " />

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_subitem_blue" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

