<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding">


            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:id="@+id/ivCheck"
                android:layout_width="28dp"
                android:layout_height="28dp"
                tools:src="@drawable/ic_simple_check_green"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/small_margin"
            android:id="@+id/tvDocumentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/button"
            android:layout_toRightOf="@+id/ivCheck"
            android:textSize="@dimen/small_text_size"
            tools:ignore="MissingPrefix"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Documen465rete4646565654654655646546546546546546554654654546546546546546565465455465"/>

        <Button
            android:id="@+id/button"
            android:padding="0dp"
            android:layout_width="75dp"
            android:textSize="10sp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="APERTAR"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvDocumentName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/small_margin"
        android:background="#000"/>


</LinearLayout>